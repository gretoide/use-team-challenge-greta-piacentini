generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @map("_id") @default(auto()) @db.ObjectId
  name  String
  email String @unique
}

model Column {
  id    String @id @map("_id") @default(auto()) @db.ObjectId
  title String
  order Int
}

model Card {
  id       String @id @map("_id") @default(auto()) @db.ObjectId
  title    String
  content  String?
  order    Int
  columnId String @db.ObjectId  // Campo requerido
  userId   String @db.ObjectId  // Campo requerido
}